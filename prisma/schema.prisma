generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id    String  @id @default(cuid()) @map("_id")
  userId String  @unique
  habits Habit[]
}

model Habit {
  id        String  @id @default(cuid()) @map("_id")
  name      String
  frequency Int
  userId    String
  user User @relation(fields: [userId], references: [id])
}

